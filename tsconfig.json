{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["dist", "build", "node_modules", "**/*.test.ts"]
}
